
<div class="container">
    <h1>Add New Course</h1>
    <form method="post" asp-controller="Courses" asp-action="Create">
        <div class="form-group">
            <label>Course Title</label>
            <input type="text" class="form-control" name="title" placeholder="Enter Course Title">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea type="text" class="form-control" name="description" placeholder="Write Description..."></textarea>
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>