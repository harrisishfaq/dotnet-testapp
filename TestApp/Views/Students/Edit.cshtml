@model Student

<h2>Edit Student</h2>


<form method="post" asp-controller="Students" asp-action="Update">
    
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label>Student Name</label>
        <input type="text" class="form-control" placeholder="Enter FullName" asp-for="FullName">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Enter Email" asp-for="Email">
    </div>
    
    <div class="form-group">
        <label>Age</label>
        <input type="number" class="form-control" placeholder="Enter Age" asp-for="Age">
    </div>
    
    <div class="mb-3">
        <label class="form-label">Select Courses</label>

        <div>
            @foreach (SelectListItem course in ViewBag.Courses)
            {
                var isChecked = Model.Courses.Any(c => c.Id.ToString() == course.Value);
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           name="selectedCourses"
                           value="@course.Value"
                           id="course_@course.Value"
                           @(isChecked ? "checked" : "") />
                    <label class="form-check-label" for="course_@course.Value">@course.Text</label>
                </div>
            }
        </div>
    </div>


    
    <br/>
  
    <button type="submit" class="btn btn-primary">Update</button>
</form>

